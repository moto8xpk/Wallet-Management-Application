<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgxanh"
    style="@style/Base.Theme.AppCompat.Light.DarkActionBar"
    tools:context="vn.com.dtt.ungdung16doana.AfterLogOn.Ui1Activity">

    <Button
        android:id="@+id/btnMenuWM"
        android:layout_width="378dp"
        android:layout_height="65dp"
        android:background="#a8d4ce"
        android:text="Wallet Management"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.31"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/btnMenuTM"
        android:layout_width="378dp"
        android:layout_height="65dp"
        android:background="#a8d4ce"
        android:text="Transaction management"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuWM"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/btnMenuStatistic"
        android:layout_width="378dp"
        android:layout_height="65dp"
        android:background="#a8d4ce"
        android:text="Statistic"
        android:textSize="24sp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuTM"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.451"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:id="@+id/tv_TotalMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Finance:"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:id="@+id/tv_Money"
        android:layout_width="150dp"
        android:layout_height="27dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Money"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="83dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,RtlHardcoded"/>

    <TextView
        android:id="@+id/tv_loaitien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="LoaiTe"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
